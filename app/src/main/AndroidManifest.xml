<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== Network / Camera ===== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- ✅ Needed if you want audio in the recorded videos -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- (Optional) Declare camera hardware; not required so app can still install on devices without camera -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- ✅ (Optional) Declare microphone hardware as NOT required (avoids install blocks on rare devices) -->
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <!-- ===== Media / Storage ===== -->
    <!-- Android 13+ scoped readers -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <!-- Pre-Android 13 fallback readers -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- Legacy write for API 28 and below only -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- ===== Foreground service & notifications ===== -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ===== Bluetooth / Nearby Devices ===== -->
    <!-- Android 12+ -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <!-- Pre-Android 12 fallbacks -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />

    <!-- ===== NFC ===== -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <!-- ✅ Vibration (needed for haptic feedback) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.GT6Driver">

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Foreground sync service -->
        <service
            android:name=".sync.GT6MediaSyncService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- WorkManager foreground service (Android 12/13/14+) -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            tools:targetApi="o" />

        <!-- Start sync after reboot / app update -->
        <receiver
            android:name=".sync.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- ===== Activities ===== -->
        <activity
            android:name=".ActionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LookupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".CheckInDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".CheckOutDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Full-screen CameraX recorder (Release) -->
        <activity
            android:name=".ReleaseVideoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ Full-screen CameraX recorder (Intake) -->
        <activity
            android:name=".IntakeVideoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PropertyActivity" />

        <activity
            android:name=".ConfigActivity"
            android:exported="false"
            android:label="Configuration" />
    </application>
</manifest>




