<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/propertyRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="0dp"
    android:background="#000000">

    <!-- Guides to match your other screens -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vehiclePanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Vehicle thumbnail -->
            <ImageView
                android:id="@+id/panelImage"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/vehicle_thumbnail"
                android:background="#EEEEEE" />

            <!-- Text column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/panelLot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOT #"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/panelDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp" />

                <!-- VIN + Location on same row -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/panelVinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIN:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/panelVinValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="6dp"
                        app:layout_constraintStart_toEndOf="@id/panelVinLabel"
                        app:layout_constraintEnd_toStartOf="@id/panelLocationName"
                        app:layout_constraintTop_toTopOf="@id/panelVinLabel"
                        app:layout_constraintBottom_toBottomOf="@id/panelVinLabel" />

                    <TextView
                        android:id="@+id/panelLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/panelVinLabel"
                        app:layout_constraintBottom_toBottomOf="@id/panelVinLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Row/Col line (right aligned, optional) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/panelRowCol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Placeholder list panel (for “items that came with the car”) -->
    <TextView
        android:id="@+id/propertyItemsPlaceholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Property items will appear here."
        android:textColor="#bbbbbb"
        android:textSize="14sp"
        android:gravity="center"
        android:background="#111111"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintTop_toBottomOf="@id/vehiclePanel"
        app:layout_constraintBottom_toTopOf="@id/btnCloseProperty" />

    <!-- CLOSE button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCloseProperty"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="CLOSE"
        android:backgroundTint="#007bff"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>



