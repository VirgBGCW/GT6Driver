<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Vertical percent guidelines (for ~75% width: 12.5% to 87.5%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuide"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuide"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo_desc"
        android:adjustViewBounds="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- EVENT label -->
    <TextView
        android:id="@+id/eventLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/event"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- Small loading spinner (toggle visibility in code) -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/eventLabel"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        android:layout_marginTop="6dp" />

    <!-- ✅ NEW: Event panel grid (2 per row) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- DRIVER label -->
    <TextView
        android:id="@+id/driverLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rvEvents"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- DRIVER spinner -->
    <Spinner
        android:id="@+id/spinnerDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown"
        android:popupBackground="@android:color/white"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/driverLabel"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- ✅ Device Name -->
    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:alpha="0.90"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvLocalVideos"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- ✅ NEW: Local Videos count (between device name and version) -->
    <TextView
        android:id="@+id/tvLocalVideos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Local Videos —"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:alpha="0.90"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvVersion"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide" />

    <!-- ✅ Version (name + code) -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="v0.0 (0)"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.75"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit" />

    <!-- Submit button pinned to bottom -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:enabled="false"
        android:layout_marginBottom="32dp"
        app:cornerRadius="12dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="@id/leftGuide"
        app:layout_constraintEnd_toEndOf="@id/rightGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/redButton" />

</androidx.constraintlayout.widget.ConstraintLayout>




